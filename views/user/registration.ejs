<%- include('../layouts/header')-%>
<div class="loginbox">
  <h2>User Registration Form</h2>

  <form action="/register" method="post" enctype="multipart/form-data">
    <% if (typeof errors !='undefined'){%> <% errors.forEach(element => { %>
    <h5><p style="color: rgb(218, 120, 120)"><%=element.msg%></p></h5>
    <% }); } %>
    <div class="userbox">
      <input
        type="text"
        name="name"
        required
        value="<%= typeof name !='undefined' ? name: '' %>"
      />
      <label>Enter Username</label>
    </div>
    <div class="userbox">
      <input
        type="email"
        name="email"
        required
        value="<%= typeof
      email !='undefined' ? email: '' %>"
      />
      <label>Enter Email</label>
    </div>
    <div class="userbox">
      <input
        type="text"
        name="mno"
        required
        value="<%= typeof mno !='undefined' ? mno: '' %>"
      />
      <label>Enter Mobile-No</label>
    </div>
    <div class="userbox">
      <input type="password" name="password" required />
      <label>Enter Password</label>
    </div>
    <div class="userbox">
      <input type="password" name="confirm_password" required />
      <label>Confirm Password</label>
    </div>

    <div class="userboxImage">
      <input
        id="userimg"
        type="file"
        name="img"
        style="display: none"
        required
        value="<%= typeof img !='undefined' ? img: '' %>"
      />
      <label for="userimg" class="">Choose Image</label>
    </div>

    <input type="submit" value="Register " class="submitform" required />
    <br />
    <div class="userbox">
      <p class="paragraph" style="height: 10px">
        Already have an account .?
        <a href="/login"> Login </a>
      </p>
    </div>
    <% if(typeof messageVerify !=='undefined'){%>
    <p style="color: greenyellow"><%= messageVerify%></p>
    <%} %>
  </form>

  <style>
    /* Change autocomplete styles in WebKit */

    html {
      height: 100%;
    }

    body {
      margin: 0;
      padding: 0;
      font-family: sans-serif;
      background: #f2eee3;
    }

    .loginbox {
      position: absolute;
      top: 50%;
      left: 50%;
      width: 400px;
      padding: 40px;
      transform: translate(-50%, -50%);
      background: rgba(0, 0, 0, 0.5);
      box-sizing: border-box;
      box-shadow: 0 15px 25px rgba(0, 0, 0, 0.6);
      border-radius: 10px;
    }

    .loginbox h2 {
      margin: 0 0 30px;
      padding: 0;
      color: #fff;
      text-align: center;
    }

    .loginbox .userbox {
      position: relative;
    }

    .loginbox .userbox input {
      width: 100%;
      padding: 10px 0;
      font-size: 16px;
      color: #fff;
      margin-bottom: 30px;
      border: none;
      border-bottom: 1px solid #fff;
      outline: none;
      background: transparent;
    }
    .loginbox .userbox label {
      position: absolute;
      top: 0;
      left: 0;
      padding: 10px 0;
      font-size: 16px;
      color: #fff;
      pointer-events: none;
      transition: 0.5s;
    }

    .loginbox .userbox input:focus ~ label,
    .loginbox .userbox input:valid ~ label {
      top: -20px;
      left: 0;
      color: #03e9f4;
      font-size: 12px;
    }

    .loginbox form a {
      position: relative;
      display: inline-block;
      padding: 10px 20px;
      align-items: center;
      color: #03e9f4;
      font-size: 16px;
      text-decoration: none;
      text-transform: uppercase;
      overflow: hidden;
      transition: 0.5s;
      margin-top: 10px;
      margin-left: 20%;

      letter-spacing: 4px;
    }
    .loginbox a:hover {
      background: #03e9f4;
      color: #fff;
      border-radius: 5px;
      box-shadow: 0 0 5px #03e9f4, 0 0 25px #03e9f4, 0 0 50px #03e9f4,
        0 0 100px #03e9f4;
    }

    .submitform {
      font-family: custom-bold;
      width: 100%;
      font-size: 1.1rem;
      outline: none;
      padding: 10px;
      background-color: rgba(0, 0, 0, 0.322);
      border: none;
      border-radius: 5px;
      color: white;
      box-shadow: 3px 3px 3px 3px rgba(0, 0, 0, 0.5);
      text-shadow: 3px 3px 3px 3px rgba(0, 0, 0, 0.5);
      letter-spacing: 0.2rem;
    }
    .submitform:hover {
      background-color: rgb(255, 255, 255);
      display: inline-block;
      transform: perspective(1px) translateZ(0);
      transform: perspective(1px) translateZ(0);
      box-shadow: 0 0 1px rgba(0, 0, 0, 0);
      position: relative;
      overflow: hidden;
      transition-property: color;
      transition-duration: 0.5s;

      color: rgb(0, 0, 0);
    }
    .paragraph {
      padding: 30px;
      size: 50px;
      text-decoration: solid;
      text-size-adjust: 30;
      margin-bottom: 20px;
    }

    .userboxImage:hover {
      background-color: rgb(255, 255, 255);
      /* display: inline-block; */
      transform: perspective(1px) translateZ(0);
      transform: perspective(1px) translateZ(0);
      box-shadow: 0 0 1px rgba(0, 0, 0, 0);
      position: relative;
      overflow: hidden;
      transition-property: color;
      transition-duration: 0.5s;

      color: rgb(0, 0, 0);
    }
    .userboxImage {
      font-family: custom-bold;
      width: 50%;
      font-size: 1.1rem;
      outline: none;
      padding: 10px;
      margin-bottom: 20px;
      background-color: rgba(0, 0, 0, 0.322);
      border: none;
      border-radius: 5px;
      color: white;
      box-shadow: 3px 3px 3px 3px rgba(0, 0, 0, 0.5);
      text-shadow: 3px 3px 3px 3px rgba(0, 0, 0, 0.5);
      letter-spacing: 0.2rem;
    }
  </style>
</div>

<% include('../layouts/footer.ejs') %>
